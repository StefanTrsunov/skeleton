{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "go",
            "args": ["run", "."],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run the Go backend server",
            "isBackground": true
        },
        {
            "label": "Build Frontend",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "build"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Build the frontend application for production"
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "start"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Run the frontend development server",
            "isBackground": true
        },
        {
            "label": "Generate Proto",
            "type": "shell",
            "command": "make",
            "args": ["proto"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Generate protobuf files using the Makefile",
            "isBackground": false
        },
        {
            "label": "Clean Proto",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Clean generated protobuf files using the Makefile",
            "isBackground": false
        },
    ]
